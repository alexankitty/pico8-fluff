pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
function _draw()
  cls()
  bits=btn()
  str=""
  for i=0,5 do
    bit = (bits&1<<i)/1>>i
    str=str..tostr(bit)
  end
  print(str,0,0)
  print(btn(),48,0)
end
