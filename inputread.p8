pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
x=0
y=0
dirlut = {
  [0] = 0,  --0000
  [1] = -1, --0001
  [2] = 1,  --0010
  [3] = 0   --0011
}

function _update()
  bits=btn()
  x+=dirlut[bits&0b11]
  y+=dirlut[bits>>2&0b11]
end

function _draw()
  cls()
  print("cpu: "..stat(1))
  rectfill(x,y,x+1,y+1)
end
